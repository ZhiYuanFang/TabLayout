/* components/tab-layout/tab-layou.wxss */
Page {
  height: 100%;
  width: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

movable-view {
  display: flex;
  justify-content: center;
  align-items: center;
}

swiper {
  flex: 1;
}

swiper-item {
  flex: 1;
}

.tablayout {
  height: 100%;
  display: flex;
  flex-flow: column;
  position: relative;
  /* align-items: center; 这个一设置，swiper页面就不见了， 可以让子布局自己设置成居中 */
}

/* tablayout */
.sv-tab-layout {
  width: auto !important;
  white-space: nowrap;
  box-sizing: border-box;
  position: absolute;  
  bottom: 35rpx;
  left: 28%;/* 临时用用，后面要改 */
  background: #f5f5f5;
  border-radius: 50rpx;

}

.tab-group {
  display: inline-flex;
  flex-flow: column;
}

.tab-group-center {
  display: flex;
  flex-flow: column;
  align-items: center;
}

.tab-list {
  display: flex;
}

.item-tab {
  display: flex;
  justify-content: center;
  border-radius: 30rpx;
  margin: 10rpx;
  padding-left: 35rpx;
  padding-right: 35rpx;
}